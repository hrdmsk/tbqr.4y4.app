<fieldset>
    <legend>送信サーバー (SMTP)</legend>
    <div class="toggle-container">
        <input type="checkbox" id="same-as-incoming" checked>
        <label for="same-as-incoming">受信サーバーと同じ設定を使用する</label>
    </div>

    <!-- カスタムSMTP設定エリア -->
    <div id="smtp-settings-wrapper">
        <label>SMTPサーバー名</label>
        <input type="text" id="smtp-host" placeholder="例: smtp.example.com">
        
        <label>ポート番号</label>
        <input type="text" id="smtp-port" value="587">
        
        <label>接続の保護</label>
        <select id="smtp-security">
            <option value="0" selected>なし</option>
            <option value="1">STARTTLS</option>
            <option value="2">SSL/TLS</option>
        </select>

        <label>SMTPユーザー名</label>
        <input type="text" id="smtp-username" placeholder="">

        <label>SMTPパスワード</label>
        <input type="password" id="smtp-password" placeholder="">
    </div>
</fieldset>

<style>
    .toggle-container {
        display: flex;
        align-items: center;
        gap: 0.5em;
        margin-bottom: 1em;
        background-color: #e9ecef;
        padding: 10px;
        border-radius: 4px;
    }
    .toggle-container input[type=checkbox] {
        width: 18px;
        height: 18px;
        cursor: pointer;
    }
    .toggle-container label {
        margin: 0;
        font-weight: normal;
        cursor: pointer;
    }

    #smtp-settings-wrapper {
        display: none;
        border-top: 1px solid #ddd;
        margin-top: 1em;
        padding-top: 1em;
    }
</style>