---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Thunderbird QR Generator" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <!-- QRコード生成ライブラリ (CDN) -->
        <script
            is:inline
            src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"
        ></script>
    </head>
    <body>
        <div class="container">
            <slot />
        </div>
    </body>
</html>

<style is:global>
    /* =========================================
	   Base Styles (Global)
	   ========================================= */
    body {
        font-family:
            -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
            "Helvetica Neue", Arial, sans-serif;
        background-color: #f4f4f9;
        color: #333;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 2em;
        min-height: 100vh;
        margin: 0;
        box-sizing: border-box;
    }

    .container {
        background-color: #ffffff;
        padding: 2em;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        width: 100%;
    }

    /* フォーム共通スタイル */
    form {
        display: flex;
        flex-direction: column;
        gap: 1.5em;
        text-align: left;
    }

    fieldset {
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 1.5em;
        margin: 0;
        background-color: #fafafa;
    }

    legend {
        font-weight: bold;
        color: #0056b3;
        padding: 0 0.5em;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    label {
        display: block;
        margin-bottom: 0.5em;
        font-weight: 500;
        margin-top: 1em;
    }
    label:first-of-type {
        margin-top: 0;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"],
    select {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 1em;
        box-sizing: border-box;
        background-color: #fff;
    }
</style>
